PROJECT_NAME     = "@@(project.settings.project.name)"
PROJECT_NUMBER	 = "@@(project.settings.project.version.number)"
SOURCE_BROWSER	 = YES
UML_LOOK	 = YES
OUTPUT_DIRECTORY = @@(project.folders.docs)/@@(project.settings.project.version.number)
GENERATE_LATEX   = NO
GENERATE_MAN     = NO
GENERATE_RTF     = NO
HIDE_SCOPE_NAMES = YES
OPTIMIZE_OUTPUT_JAVA = YES
INPUT            += @@(project.folders.src)/core
INPUT            += @@(project.folders.src)/doc
INPUT            += @@(project.folders.src)/tools
STRIP_FROM_PATH  = @@(project.folders.src)
TAB_SIZE         = 4
RECURSIVE	 = YES
EXTRACT_ALL	 = YES
# EXCLUDE		 = ...
EXCLUDE_PATTERNS	= *__init__.py
QUIET            = YES
JAVADOC_AUTOBRIEF = YES
HTML_FOOTER      = @@(project.folders.tmp)/doxygen-footer.html
# IMAGE_PATH	 = pics

# doxygen tags support
FILTER_SOURCE_FILES = YES
INPUT_FILTER = "python @@(project.folders.src)/3rdparty/doxygen-support/doxypy.py"
